<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <org.opencv.android.JavaCameraView
        android:id="@+id/opencv_camera_preview"
        android:layout_width="411dp"
        android:layout_height="395dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp" />

    <TextView
        android:id="@+id/widthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Detecting General Shapes:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <Button
        android:id="@+id/circButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:width="120dp"
        android:height="30dp"
        android:backgroundTint="#2196F3"
        android:foregroundTint="#FFFFFF"
        android:text="Circles"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <Button
        android:id="@+id/rectButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:width="100dp"
        android:height="30dp"
        android:backgroundTint="#2196F3"
        android:text="Rectangle"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <Button
        android:id="@+id/ControlButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineButton"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:width="100dp"
        android:height="30dp"
        android:backgroundTint="#2196F3"
        android:text="Key"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <Button
        android:id="@+id/lineButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circButton"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:width="100dp"
        android:height="30dp"
        android:backgroundTint="#2196F3"
        android:text="Line"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
        android:id="@+id/colorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_below="@+id/lineButton"
        android:layout_alignStart="@+id/circButton"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="Detecting arbitrary shapes:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

